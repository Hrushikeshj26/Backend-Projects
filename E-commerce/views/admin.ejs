<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel - Add Product</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-900 min-h-screen">

    <!-- Navbar -->
    <nav class="bg-gray-800 text-white px-6 py-4">
      <div class="container mx-auto flex justify-between items-center">
        <h1 class="text-xl font-bold">Admin Panel</h1>
        <span class="text-sm">Welcome, Admin</span>
      </div>
    </nav>

    <!-- Main Section -->
    <main class="container mx-auto px-4 py-10">
      <h2 class="text-2xl text-blue-600 font-semibold mb-6">Add New Product</h2>
      <h2 class="text-2xl text-blue-600 font-semibold mb-6"><a href="/">Back To Home </a></h2>
      <h2 class="text-2xl text-blue-600 font-semibold mb-6"><a href="/viewproducts">Viwe All Products </a></h2>

      <!-- Product Form -->
      <form class="bg-gray-700 p-6 rounded-lg shadow-md max-w-2xl mx-auto space-y-4" method="POST" action="/add-product">
        
        <!-- Product Name -->
        <div>
          <label class="block text-white font-medium mb-1">Product Name</label>
          <input type="text" placeholder="Enter product name" name="prdname"
            class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <!-- Product Description -->
        <div>
          <label class="block text-white font-medium mb-1">Product Description</label>
         <input type="text" placeholder="Enter product name" name="prddecs"
            class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <!-- Product Image URL -->
        <div>
          <label class="block text-white font-medium mb-1">Image URL</label>
          <input type="text" placeholder="https://example.com/image.jpg" name="prdimg"
            class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <!-- Product Price -->
        <div>
          <label class="block text-white font-medium mb-1">Price ($)</label>
          <input type="number" placeholder="Enter product price" name="prdprice"
            class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <button
            type="submit"
            class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition duration-200"
          >
            Add Product
          </button>
        </div>
      </form>
    </main>

  </body>
</html>
