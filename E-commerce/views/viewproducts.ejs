<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel - Add Product</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-900 min-h-screen">

    <!-- Navbar -->
    <nav class="bg-gray-800 text-white px-6 py-4">
      <div class="container mx-auto flex justify-between items-center">
        <h1 class="text-xl font-bold">Admin Panel</h1>
        <span class="text-sm">Welcome, Admin</span>
      </div>
    </nav>

    <!-- Main Section -->
    <main class="container mx-auto px-4 py-10">
      <h2 class="text-2xl text-blue-600 font-semibold mb-6"><a href="/admin">Add New Product </a></h2>
      <h2 class="text-2xl text-blue-600 font-semibold mb-6"><a href="/">Back To Home </a></h2>
      <h2 class="text-2xl text-blue-600 font-semibold mb-6"><a href="/viewproducts">Viwe All Products </a></h2>

        <section class="container mx-auto px-4 py-10">
      <h2 class="text-xl text-white font-semibold mb-6">All Products</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <!-- Product Card -->

        <% products.forEach(p => { %>
            <div class="bg-white p-4 rounded-lg shadow hover:shadow-xl">
                <img
                src="<%= p.prdimg %>"
                alt="Product"
                class="w-full h-60 object-cover mb-4"
                />
                <h3 class="text-lg font-semibold"><%= p.prdname %></h3>
                <p class="text-gray-600 "><%= p.prddecs %></p>
                <p class="text-gray-600 mb-4 font-bold ">$<%= p.prdprice %></p>
                <a class="bg-yellow-400 text-black py-2 px-24 rounded hover:bg-yellow-500" href="/delete/<%= p._id %>">Remove Product</a>
            </div>
        <% }) %>
        
      </div>
    </section>
    </main>

  </body>
</html>
