<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full px-5 py-2 rounded-xl outline-none bg-zinc-700" type="text" placeholder="Title gose here.." name="title">
                <textarea class=" w-full mt-2 rounded-xl outline-none px-5 py-2 bg-zinc-700 resize-none" placeholder="Write your task details here..." name="details"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-xl" type="submit" value="Create Task">
            </form>
        </div>

        <div class="tasks flex gap-3 flex-wrap p-10 text-white">
            <% if(files.length > 0){%>
            <% files.forEach(function(val){ %>
                <div class="task w-72 px-3 py-4 rounded-xl bg-zinc-800">
                    <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                    <div class="flex justify-between items-center mt-2">
                        <a class="text-blue-600 inline-block mt-3" href="/files/<%= val%>">Read More</a>
                        <a class="bg-yellow-600 text-white rounded-xl px-4 inline-block mt-3" href="/edit/<%= val%>">Edit File</a>
                    </div>
                </div>
            <% }) %>
            <% }else{ %>
                <h1 class="text-white">No Task Yet...</h1>
            <% } %>
        </div>
    </div>
</body>
 